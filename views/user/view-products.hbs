

    <section>
        <div class="container mt-5">
        <div class="row">
            {{#each products}}
        <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem;height:24rem">
                <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="width:200px;height:200px;">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <h4 class="card-price">{{this.price}}</h4>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
        {{/each}}
     </div>
 </div>
    </section>

   
